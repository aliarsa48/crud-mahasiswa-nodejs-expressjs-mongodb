<!-- Modal -->
<div
  class="modal fade"
  id="add-keluarga-modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Keluarga</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/mahasiswa/keluarga" method="POST">
        <input type="hidden" id="id_mhs" class="id_mhs" name="id_mhs" required>
        <div class="modal-body">
          <div class="form-group">
            <label for="nama">Hubungan</label>
            <input
              type="text"
              class="form-control"
              id="hubungan"
              name="hubungan"
              placeholder="Enter hubungan"
              required
            />
          </div>
          <div class="form-group">
            <label for="nim">Nama</label>
            <input
              type="text"
              class="form-control"
              id="nama"
              name="nama"
              placeholder="Enter Nama"
              required
            />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-primary">Add</button>
        </div>
      </form>
    </div>
  </div>
</div>